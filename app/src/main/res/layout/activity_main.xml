<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/pedal_bike" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/mesi_bajk_logo" />

            <LinearLayout
                android:id="@+id/bike1tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bike_background"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/bike1_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bike1"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/bike1_occupancy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/frej"
                        android:textAlignment="viewEnd"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/bike1_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/baseline_circle_green"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bike2tab"
