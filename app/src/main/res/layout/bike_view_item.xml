<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bikeTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:background="@drawable/bike_background"
    android:orientation="horizontal"
    android:paddingHorizontal="24dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/bike_ID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="01"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/bike_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Bike1"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="end">

      <TextView
          android:id="@+id/bike_occupancy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:text="@string/occupied"
          android:textAlignment="viewEnd"
          android:textSize="22sp" />

      <ImageView
          android:id="@+id/bike_icon"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/baseline_circle_orange" />

    </LinearLayout>

  </LinearLayout>